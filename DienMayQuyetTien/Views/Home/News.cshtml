                <section>

                    <div class="row group-post">
                        
                        @foreach (var item in Model){
                        <div class="post">
                            <div class="col-12 col-lg-12 col-md-12 col-sm-12">

                                <div class="image">

                                    

                                        <img src="/Images/@item.Img" class="img-responsive" alt="Example blog post alt">

                                    
                                </div>
                            </div>
                            <div class="col-12 col-lg-12 col-md-12 col-sm-12">

                                <h2>@Html.DisplayFor(modelItem => item.Title)</h2>
                            </div>

                            <div class="col-12 col-lg-12 col-md-12 col-sm-12">

                                <h4>@Html.DisplayFor(modelItem => item.Infor)</h4>
                            </div>

                        </div>
                           }
                    </div>
                </section>

            </div>









