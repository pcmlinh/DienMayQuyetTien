@model IEnumerable<DienMayQuyetTien.Models.InstallmentBillDetail>

@{
    ViewBag.Title = "Index";
}

<h4>Thông tin các sản phẩm</h4>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InstallmentPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InstallmentBill.BillCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.ProductCode)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InstallmentPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InstallmentBill.BillCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.ProductCode)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>
<div>
    <div class="form-group">
        <label class="control-label col-md-2">Tổng tiền</label>
        <div class="col-md-10">
            @{var total = Model.Sum(m => m.InstallmentPrice * m.Quantity);
                Session["Total"] = total;
            }
            <input class="disabled" value="@Model.Sum(m => m.InstallmentPrice * m.Quantity)" disabled /> VNĐ
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Tiền trả trước</label>
        <div class="col-md-10">
            <input type="number" value="" id="taken" /> VNĐ
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Tiền còn lại</label>
        <div class="col-md-10">
            <input type="text" id="remain" value="" disabled required/> VNĐ
        </div>
    </div>
</div>