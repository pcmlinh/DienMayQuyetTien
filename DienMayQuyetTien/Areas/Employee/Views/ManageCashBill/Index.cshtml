@model IEnumerable<DienMayQuyetTien.Models.CashBill>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Employee/Views/Shared/_EmpLayout.cshtml";
}

<h2>Quản lí hóa đơn tiền mặt</h2>

<p>
    <button class="btn btn-success" onclick="location.href='@Url.Action("Create", "ManageCashBill")'"><i class="fa fa-plus"></i> Thêm hóa đơn</button>
</p>
<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i> Bảng hóa đơn tiền mặt
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead align="center">
                    <tr>
                        <th>
                            Mã hóa đơn
                        </th>
                        <th>
                            Tên khách khàng
                        </th>
                        <th>
                            Số điện thoại
                        </th>
                        <th>
                            Địa chỉ
                        </th>
                        <th>
                            Ngày giờ
                        </th>
                        <th>
                            Người giao hàng
                        </th>
                        <th>
                            Ghi chú
                        </th>
                        <th>
                            Tổng tiền
                        </th>
                        <th>
                            Tùy chọn
                        </th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>
                            Mã hóa đơn
                        </th>
                        <th>
                            Tên khách khàng
                        </th>
                        <th>
                            Số điện thoại
                        </th>
                        <th>
                            Địa chỉ
                        </th>
                        <th>
                            Ngày giờ
                        </th>
                        <th>
                            Người giao hàng
                        </th>
                        <th>
                            Ghi chú
                        </th>
                        <th>
                            Tổng tiền
                        </th>
                        <th>
                            Tùy chọn
                        </th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.BillCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CustomerName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PhoneNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Address)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Shipper)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Note)
                            </td>
                            <td>
                                @String.Format("{0:0,0}", item.GrandTotal)
                            </td>
                            <td>
                                <button class="btn btn-info" onclick="location.href='@Url.Action("Edit", "ManageCashBill", new { id = item.ID })'"><i class="fa fa-pencil"></i></button>
                                <button class="btn btn-danger" onclick="location.href='@Url.Action("Print", "ManageCashBill", new { id = item.ID })'"><i class="fa fa-print"></i></button>

                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer small text-muted"></div>

</div>

