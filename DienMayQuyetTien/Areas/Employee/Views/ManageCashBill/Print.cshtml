@model DienMayQuyetTien.Areas.Employee.Models.CashBillModel
@{
    Layout = null;

    int i = 1;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Manage Installment Bill</title>
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
</head>
<style>

    @@page {
        bleed: 1cm;
        size: A4 portrait;
        size: auto; /* auto is the initial value */
        margin-left: 0mm; /* this affects the margin in the printer settings */
        margin-bottom: 0mm;
        margin-top: 0mm;

        html {
            background-color: #FFFFFF;
            margin: 0px; /* this affects the margin on the html before sending to printer */
        }

        body {
            border: solid 1px blue;
            margin: 10mm 15mm 10mm 15mm; /* margin you want for the content */
        }
    }

    @@media print {
        .page {
            margin: 0;
            border: initial;
            border-radius: initial;
            width: initial;
            min-height: initial;
            box-shadow: initial;
            background: initial;
            page-break-after: always;
        }
    }

    body {
        background: #eee;
        font-familly: roboto;
        -webkit-print-color-adjust: exact !important;
    }

    div.container {
        border-radius: 15px;
        background: white;
        box-shadow: 0 10px 10px rgba(0, 0, 0, 0.2);
    }

    div.invoice-letter {
        width: auto;
        position: relative;
        min-height: 100px;
        max-height: 120px;
        background-color: #691a1a;
        margin-right: -48px;
        margin-left: -48px;
        box-shadow: 0 4px 3px rgba(0,0,0,0.4);
    }

    div.letter-title {
        margin-top: 10px;
        height: 130px;
        border-right: 2px solid #eee;
    }

    div.letter-content {
        margin-top: 10px;
    }

    table.invoice thead th {
        background-color: rgba(243, 142, 142, 0.4);
        border-top: none;
    }

    table.invoice thead tr:first-child th:first-child {
        border-top-left-radius: 25px;
    }

    table.invoice thead tr:first-child th:last-child {
        border-top-right-radius: 25px;
    }

    tr.last-row {
        background-color: rgba(243, 142, 142, 0.4);
    }

        tr.last-row th {
            border-bottom-left-radius: 25px;
            width: 30px;
        }

        tr.last-row td {
            border-bottom-right-radius: 25px;
        }

    div.row div.to {
        height: 260px;
        padding-right: 25px;
        border-right: 2px solid rgba(243, 142, 142, 0.4);
    }
</style>
<body>
    <div class="container my-5 px-5 py-5">
        <div id="print">
            <div class="row">
                <div class="col-3 contact-details">
                    <h5>Điện máy Quyết Tiến</h5>
                    <h6><em>332/177/25, 1 Đường số 6, Phường 5, Gò Vấp, Hồ Chí Minh</h6>
                    <p></em></p>
                </div>
                <div class="col-1 offset-2 logo">


                    <img width="125px" src="~/Images/logo.png" />
                </div>
                <div class="invoice-details col-3 offset-3 text-right">

                    <h6>Mã hóa đơn: @Model.BillCode</h6>
                    <h6>Ngày giờ: @Model.Date</h6>

                </div>
            </div>

            <div class="container-fluid invoice-letter mt-3">
                <div class="row">
                    <div class="col-12 text-white pr-4 py-3 letter-content">
                        <p>
                            <h3 align="center">HÓA ĐƠN TIỀN MẶT</h3>
                        </p>
                    </div>
                </div>
            </div>

            <div class="row table mt-5">
                <table class="invoice table table-hover">
                    <thead class="thead">
                        <tr>
                            <th scope="col">STT</th>
                            <th scope="col">Tên sản phẩm</th>
                            <th scope="col">Đơn giá</th>
                            <th scope="col">Số lượng</th>
                            <th scope="col">Tổng</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.CASHBILLDETAIL)
                        {
                            <tr>
                                <th scope="row">@i</th>
                                <td class="item">@Html.DisplayFor(modelItem => item.Product.ProductName)</td>
                                <td>@string.Format("{0:0,0} VND", item.Product.SalePrice)</td>
                                <td>@Html.DisplayFor(modelItem => item.Product.Quantity)</td>
                                <td>@string.Format("{0:0,0} VND", item.Product.SalePrice * item.Product.Quantity)</td>
                            </tr>
                            i = i + 1;
                        }
                    </tbody>
                </table>
            </div>

            <div class="row">
                <!-- invoiced to details -->
                <div class=" offset-1 col-5">
                    <div class="to text-left">
                        <h5 class="effect-color pt-4">Thông tin khách hàng:</h5>
                        <h6 class="theme-color"><strong>Tên khách hàng: @Model.CustomerName</strong></h6>
                        <p>Địa chỉ: @Model.Address</p>
                        <p>Số điện thoại: @Model.PhoneNumber</p>
                    </div>
                </div>
                <!-- Invoice assets and total -->
                <div class="col-6 pr-5">
                    <table class="table table-borderless text-right">
                        <tbody>
                            <tr>
                                <th scope="row">Subtotal</th>
                                <td>75 <span class="currency">&euro;</span></td>
                            </tr>
                            <tr>
                                <th scope="row">Taxes*</th>
                                <td>11,25 <span class="currency">&euro;</span></td>
                            </tr>
                            <tr>
                                <th scope="row">Discounts</th>
                                <td>7,5 <span class="currency">&euro;</span></td>
                            </tr>
                            <tr>
                                <th scope="row">Shipping</th>
                                <td><span class="currency">&euro;</span> 10,25</td>
                            </tr>
                            <tr class="last-row">
                                <th scope="row"><h4>Total</h4></th>
                                <td><h4><span class="currency">&euro;</span> 90,25</h4></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <p class="text-center mt-3"><em></em></p>
        </div>
        <button type="button" class="btn btn-danger btn-lg" style="margin:0 auto; width:10%;display: block;background-color:#b12e2e; font-weight:700"><i class="fa fa-print"></i> IN</button>
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js" integrity="sha384-wHAiFfRlMFy6i5SRaxvfOCifBUQy1xHdJ/yoi7FRNXMRBu5WHdZYu1hA6ZOblgut" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js" integrity="sha384-B0UglyR+jN6CkvvICOB2joaf5I4l3gm9GU6Hc1og6Ls7i6U/mkkaduKaBhlAXv9k" crossorigin="anonymous"></script>
    <script>
        function print() {
            var area = document.getElementById("print");
            newWin = window.open("");
            newWin.document.write(area.outerHTML);
            newWin.print();
            newWin.close();
        }

        $('button').on('click', function () {
            print();
        })
    </script>
</body>
</html>


